{
  "name": "ai-text-to-rpg",
  "version": "1.0.0",
  "description": "AI-powered text-to-RPG adventure game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "ts-start": "ts-node server.ts",
    "ts-dev": "nodemon --exec ts-node server.ts",
    "build": "tsc server.ts --outDir dist --target es2020 --module commonjs --esModuleInterop",
    "prod": "npm run build && node dist/server.js"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.13",
    "nodemon": "^3.0.1",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "ai",
    "rpg",
    "game",
    "text-adventure"
  ],
  "author": "",
  "license": "MIT"
}
